@model WebRestoran.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<main class="auth-main">
    <section class="hero-section min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row align-items-center justify-content-center g-4 g-lg-5">
                <!-- Welcome Content -->
                <div class="col-lg-6 order-lg-2 text-center text-lg-start">
                    <div class="hero-content">
                        <!-- Brand Badge -->
                        <div class="d-flex align-items-center justify-content-center justify-content-lg-start mb-4">
                            <span class="badge bg-primary fs-6 px-3 py-2">
                                <i class="fas fa-utensils me-2"></i>WebRestoran
                            </span>
                        </div>
                        
                        <!-- Hero Title -->
                        <h1 class="display-4 fw-bold mb-4">
                            Welcome back to 
                            <span class="text-gradient">WebRestoran</span>
                        </h1>
                        
                        <!-- Hero Description -->
                        <p class="lead text-muted mb-5">
                            Sign in to continue your culinary journey. Manage your orders, 
                            explore our delicious menu, and enjoy a seamless dining experience.
                        </p>
                        
                        <!-- Benefits List -->
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                            <i class="fas fa-shield-alt text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Secure & Fast</h6>
                                        <p class="text-muted mb-0">Advanced security with quick access</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                            <i class="fas fa-user-cog text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Personalized Experience</h6>
                                        <p class="text-muted mb-0">Customized dashboard and preferences</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                            <i class="fas fa-clock text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">Real-time Updates</h6>
                                        <p class="text-muted mb-0">Track your orders live</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Login Form -->
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0">
                        <div class="card-body">
                            <!-- Card Header -->
                            <div class="text-center mb-4">
                                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                                    <i class="fas fa-sign-in-alt text-primary fs-4"></i>
                                </div>
                                <h1 class="h3 fw-bold mb-2">Sign In</h1>
                                <h3 class="text-muted mb-0 fs-6 fw-normal">Enter your credentials to access your account</h3>
                            </div>

                            <!-- Login Form -->
                            <form asp-action="Login" method="post" novalidate>
                                <input type="hidden" asp-for="ReturnUrl" />
                                
                                <!-- Validation Summary -->
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <!-- Email Field -->
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-envelope text-muted"></i>
                                        </span>
                                        <input asp-for="Email" 
                                               class="form-control border-start-0" 
                                               autocomplete="username" 
                                               placeholder="Enter your email address" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <!-- Password Field -->
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-semibold">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-lock text-muted"></i>
                                        </span>
                                        <input asp-for="Password" 
                                               class="form-control border-start-0 border-end-0" 
                                               autocomplete="current-password" 
                                               placeholder="Enter your password" />
                                        <button type="button" class="btn btn-outline-secondary border-start-0 password-toggle" aria-label="Toggle password visibility">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <!-- Remember Me & Forgot Password -->
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                                    </div>
                                    <a href="#" class="text-decoration-none">Forgot password?</a>
                                </div>

                                <!-- Submit Button -->
                                <button type="submit" class="btn btn-primary w-100 mb-3">
                                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                </button>
                                
                                <!-- Register Link -->
                                <div class="text-center">
                                    <span class="text-muted">Don't have an account? </span>
                                    <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold">
                                        Create one now
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth.js" asp-append-version="true"></script>
}