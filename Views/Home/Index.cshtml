                                    </div>
                                    
                                    @if (item.Stock > 0)
                                    {
                                        <a href="@Url.Action("Create", "Order")" class="btn" style="background: linear-gradient(135deg, #007bff, #0056b3); color: white; border: none; padding: 10px 20px; border-radius: 25px; font-weight: 600; box-shadow: 0 4px 15px rgba(0,123,255,0.3); transition: all 0.3s ease;">
