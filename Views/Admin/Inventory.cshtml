@model IEnumerable<WebRestoran.Models.Ingredient>
@{
    ViewData["Title"] = "Inventory Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary fw-bold">
                    <i class="fas fa-boxes me-2"></i>Inventory Management
                </h2>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("LowStockAlerts")" class="btn btn-warning">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        Low Stock Alerts (@ViewBag.LowStockCount)
                    </a>
                    <a href="@Url.Action("Create", "Ingredient")" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>Add Ingredient
                    </a>
                </div>
            </div>

            <!-- Summary Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Ingredients</h6>
                                    <h3 class="mb-0">@Model.Count()</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-list fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Low Stock Items</h6>
                                    <h3 class="mb-0">@ViewBag.LowStockCount</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Inventory Value</h6>
                                    <h3 class="mb-0">@ViewBag.TotalValue.ToString("C")</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-dollar-sign fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Well Stocked</h6>
                                    <h3 class="mb-0">@Model.Count(i => !i.IsLowStock)</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-check-circle fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Inventory Table -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-table me-2"></i>Inventory Details</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ingredient</th>
                                    <th>Current Stock</th>
                                    <th>Minimum Stock</th>
                                    <th>Unit</th>
                                    <th>Cost per Unit</th>
                                    <th>Total Value</th>
                                    <th>Supplier</th>
                                    <th>Last Restocked</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ingredient in Model)
                                {
                                    <tr class="@(ingredient.IsLowStock ? "table-warning" : "")">
                                        <td class="fw-semibold">@ingredient.IngredientName</td>
                                        <td>
                                            <span class="badge @(ingredient.IsLowStock ? "bg-warning" : "bg-success") fs-6">
                                                @ingredient.CurrentStock @ingredient.Unit
                                            </span>
                                        </td>
                                        <td>@ingredient.MinimumStock @ingredient.Unit</td>
                                        <td>@ingredient.Unit</td>
                                        <td>@ingredient.CostPerUnit.ToString("C")</td>
                                        <td class="fw-semibold text-success">@ingredient.TotalValue.ToString("C")</td>
                                        <td>@ingredient.Supplier</td>
                                        <td>@ingredient.LastRestocked?.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (ingredient.IsLowStock)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Low Stock
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>In Stock
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("InventoryDetails", new { id = ingredient.IngredientId })" 
                                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "Ingredient", new { id = ingredient.IngredientId })" 
                                                   class="btn btn-sm btn-outline-secondary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (ingredient.IsLowStock)
                                                {
                                                    <button type="button" class="btn btn-sm btn-warning" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#restockModal" 
                                                            data-ingredient-id="@ingredient.IngredientId"
                                                            data-ingredient-name="@ingredient.IngredientName"
                                                            data-current-stock="@ingredient.CurrentStock"
                                                            title="Restock">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Restock Modal -->
<div class="modal fade" id="restockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="@Url.Action("UpdateStock")">
                <div class="modal-body">
                    <input type="hidden" id="ingredientId" name="id" />
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Ingredient:</label>
                        <p id="ingredientName" class="text-muted"></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Current Stock:</label>
                        <p id="currentStock" class="text-muted"></p>
                    </div>
                    <div class="mb-3">
                        <label for="newStock" class="form-label fw-semibold">New Stock Amount:</label>
                        <input type="number" class="form-control" id="newStock" name="newStock" step="0.01" min="0" required>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label fw-semibold">Notes (Optional):</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Add any notes about this stock update..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Stock</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Handle restock modal
    document.addEventListener('DOMContentLoaded', function() {
        const restockModal = document.getElementById('restockModal');
        restockModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            const ingredientId = button.getAttribute('data-ingredient-id');
            const ingredientName = button.getAttribute('data-ingredient-name');
            const currentStock = button.getAttribute('data-current-stock');
            
            document.getElementById('ingredientId').value = ingredientId;
            document.getElementById('ingredientName').textContent = ingredientName;
            document.getElementById('currentStock').textContent = currentStock;
            document.getElementById('newStock').value = '';
            document.getElementById('notes').value = '';
        });
    });
</script>