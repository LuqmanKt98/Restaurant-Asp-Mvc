@model IEnumerable<WebRestoran.Models.Food>
@{
    ViewData["Title"] = "Menu Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="p-4 rounded-3" style="background: linear-gradient(135deg, #1f2937, #111827); color: #fff;">
        <h1 class="display-6 mb-1">Menu Management</h1>
        <p class="mb-0 text-secondary">Manage your restaurant's menu items and inventory</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-utensils fa-2x mb-2"></i>
                    <h4 class="mb-1">@ViewBag.TotalItems</h4>
                    <p class="mb-0">Total Items</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                    <h4 class="mb-1">@ViewBag.LowStockItems</h4>
                    <p class="mb-0">Low Stock</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <i class="fas fa-times-circle fa-2x mb-2"></i>
                    <h4 class="mb-1">@ViewBag.OutOfStockItems</h4>
                    <p class="mb-0">Out of Stock</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-2x mb-2"></i>
                    <h4 class="mb-1">@ViewBag.Categories.Count</h4>
                    <p class="mb-0">Categories</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-cogs me-2"></i>Quick Actions
                        </h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("AddEdit", "Food", new { id = 0 })" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-plus me-2"></i>Add New Item
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Ingredient")" class="btn btn-warning btn-lg w-100">
                                <i class="fas fa-leaf me-2"></i>Manage Ingredients
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Food")" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-eye me-2"></i>View Public Menu
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Inventory")" class="btn btn-secondary btn-lg w-100">
                                <i class="fas fa-boxes me-2"></i>Inventory Report
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu Items Table -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Menu Items
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var food in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(food.ImageUrl))
                                                {
                                                    <img src="~/images/@food.ImageUrl" alt="@food.FoodName" 
                                                         class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                                         style="width: 50px; height: 50px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <div class="fw-semibold">@food.FoodName</div>
                                                <small class="text-muted">@(food.Description?.Length > 50 ? food.Description.Substring(0, 50) + "..." : food.Description)</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@(food.Category?.CategoryName ?? "Uncategorized")</span>
                                            </td>
                                            <td>
                                                <span class="fw-semibold text-success">@food.Price.ToString("C")</span>
                                            </td>
                                            <td>
                                                @if (food.Stock == 0)
                                                {
                                                    <span class="badge bg-danger">Out of Stock</span>
                                                }
                                                else if (food.Stock <= 5)
                                                {
                                                    <span class="badge bg-warning">@food.Stock (Low)</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@food.Stock</span>
                                                }
                                            </td>
                                            <td>
                                                @if (food.Stock > 0)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Available
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times me-1"></i>Unavailable
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("AddEdit", "Food", new { id = food.FoodId })" 
                                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            data-bs-toggle="modal" data-bs-target="#deleteModal@(food.FoodId)" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No menu items found</h5>
                            <p class="text-muted">Start by adding your first menu item.</p>
                            <a href="@Url.Action("AddEdit", "Food", new { id = 0 })" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add First Item
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Dashboard -->
    <div class="mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

<!-- Delete Modals -->
@foreach (var food in Model)
{
    <div class="modal fade" id="deleteModal@(food.FoodId)" tabindex="-1" aria-labelledby="deleteModalLabel@(food.FoodId)" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel@(food.FoodId)">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>@food.FoodName</strong>?</p>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" action="@Url.Action("Delete", "Food", new { id = food.FoodId })" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto-refresh page every 30 seconds to update stock status
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}