@model WebRestoran.Models.ViewModels.UserDetailsViewModel
@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="p-4 rounded-3" style="background: linear-gradient(135deg, #1f2937, #111827); color: #fff;">
        <h1 class="display-6 mb-1">User Details</h1>
        <p class="mb-0 text-secondary">Comprehensive user information and activity</p>
    </div>

    <!-- User Information Card -->
    <div class="row mt-4">
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>User Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-user fa-2x text-primary"></i>
                        </div>
                        <h5 class="mt-3 mb-1">@Model.UserName</h5>
                        <p class="text-muted mb-0">@Model.Email</p>
                    </div>

                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-semibold">Email Status</label>
                            <div>
                                @if (Model.EmailConfirmed)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Confirmed
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-exclamation-triangle me-1"></i>Unconfirmed
                                    </span>
                                }
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <label class="form-label fw-semibold">Phone Number</label>
                            <p class="mb-0">@(Model.PhoneNumber ?? "Not provided")</p>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-semibold">Account Status</label>
                            <div>
                                @if (Model.IsLockedOut)
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-lock me-1"></i>Locked Out
                                    </span>
                                    <small class="d-block text-muted mt-1">
                                        Until: @Model.LockoutEnd?.ToString("MMM dd, yyyy HH:mm")
                                    </small>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-unlock me-1"></i>Active
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-semibold">Failed Login Attempts</label>
                            <p class="mb-0">@Model.AccessFailedCount</p>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-semibold">Roles</label>
                            <div>
                                @foreach (var role in Model.Roles)
                                {
                                    <span class="badge bg-info me-1">@role</span>
                                }
                                @if (!Model.Roles.Any())
                                {
                                    <span class="text-muted">No roles assigned</span>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-4 d-grid gap-2">
                        @if (Model.IsLockedOut)
                        {
                            <form method="post" action="@Url.Action("ToggleUserLockout", new { id = Model.Id })">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-unlock me-2"></i>Unlock User
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" action="@Url.Action("ToggleUserLockout", new { id = Model.Id })">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning" 
                                        onclick="return confirm('Are you sure you want to lock this user?')">
                                    <i class="fas fa-lock me-2"></i>Lock User
                                </button>
                            </form>
                        }
                        
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" 
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-tag me-2"></i>Change Role
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <form method="post" action="@Url.Action("ChangeUserRole", new { id = Model.Id, role = "Admin" })">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-crown me-2"></i>Make Admin
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form method="post" action="@Url.Action("ChangeUserRole", new { id = Model.Id, role = "User" })">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-user me-2"></i>Make User
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics and Orders -->
        <div class="col-lg-8">
            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                            <h4 class="mb-1">@Model.TotalOrders</h4>
                            <p class="mb-0">Total Orders</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                            <h4 class="mb-1">@Model.TotalSpent.ToString("C")</h4>
                            <p class="mb-0">Total Spent</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-calendar fa-2x mb-2"></i>
                            <h6 class="mb-1">@(Model.Orders.LastOrDefault()?.OrderDate.ToString("MMM dd, yyyy") ?? "Never")</h6>
                            <p class="mb-0">Last Order</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order History -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>Order History
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
                                    {
                                        <tr>
                                            <td class="fw-semibold">#@order.OrderId</td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>@order.OrderItems.Count items</td>
                                            <td class="fw-semibold text-success">@order.TotalAmount.ToString("C")</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case OrderStatus.Pending:
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case OrderStatus.Processing:
                                                        <span class="badge bg-info">Processing</span>
                                                        break;
                                                    case OrderStatus.Completed:
                                                        <span class="badge bg-success">Completed</span>
                                                        break;
                                                    case OrderStatus.Cancelled:
                                                        <span class="badge bg-danger">Cancelled</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@order.Status</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No orders found</h5>
                            <p class="text-muted">This user hasn't placed any orders yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a href="@Url.Action("Users")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Users
        </a>
    </div>
</div>