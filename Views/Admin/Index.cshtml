@model WebRestoran.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0 text-gray-800">Admin Dashboard</h1>
                <div class="text-muted">
                    <i class="fas fa-clock"></i> Last updated: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Analytics Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Revenue Analytics</h6>
                    <span class="badge badge-success">@Model.RevenueGrowthPercentage.ToString("+0.0;-0.0;0.0")% vs last month</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-3 col-md-6 mb-3">
                            <div class="card border-left-success h-100">
                                <div class="card-body py-3">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Today's Revenue</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.TodayRevenue.ToString("N2")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-3">
                            <div class="card border-left-info h-100">
                                <div class="card-body py-3">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">This Week</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.WeekRevenue.ToString("N2")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-3">
                            <div class="card border-left-warning h-100">
                                <div class="card-body py-3">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">This Month</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.MonthRevenue.ToString("N2")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-3">
                            <div class="card border-left-primary h-100">
                                <div class="card-body py-3">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Revenue</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.TotalRevenue.ToString("N2")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Performance Metrics -->
    <div class="row mb-4">
        <div class="col-xl-8">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Performance Metrics</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Average Order Value</div>
                                <div class="h4 mb-0 font-weight-bold text-gray-800">$@Model.AverageOrderValue.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Revenue per User</div>
                                <div class="h4 mb-0 font-weight-bold text-gray-800">$@Model.RevenuePerUser.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Orders per User</div>
                                <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.OrdersPerUser.ToString("N1")</div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Revenue Growth</div>
                                <div class="h5 mb-0 font-weight-bold @(Model.RevenueGrowthPercentage >= 0 ? "text-success" : "text-danger")">@Model.RevenueGrowthPercentage.ToString("+0.0;-0.0;0.0")%</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">Order Growth</div>
                                <div class="h5 mb-0 font-weight-bold @(Model.OrderGrowthPercentage >= 0 ? "text-success" : "text-danger")">@Model.OrderGrowthPercentage.ToString("+0.0;-0.0;0.0")%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Order Status Overview</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-xs font-weight-bold text-warning">Pending</span>
                            <span class="text-xs font-weight-bold">@Model.PendingOrders</span>
                        </div>
                        <div class="progress mb-2" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width: @(Model.TotalOrders > 0 ? (Model.PendingOrders * 100.0 / Model.TotalOrders) : 0)%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-xs font-weight-bold text-info">Processing</span>
                            <span class="text-xs font-weight-bold">@Model.ProcessingOrders</span>
                        </div>
                        <div class="progress mb-2" style="height: 8px;">
                            <div class="progress-bar bg-info" style="width: @(Model.TotalOrders > 0 ? (Model.ProcessingOrders * 100.0 / Model.TotalOrders) : 0)%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-xs font-weight-bold text-success">Completed</span>
                            <span class="text-xs font-weight-bold">@Model.CompletedOrders</span>
                        </div>
                        <div class="progress mb-2" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: @(Model.TotalOrders > 0 ? (Model.CompletedOrders * 100.0 / Model.TotalOrders) : 0)%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-xs font-weight-bold text-danger">Cancelled</span>
                            <span class="text-xs font-weight-bold">@Model.CancelledOrders</span>
                        </div>
                        <div class="progress mb-2" style="height: 8px;">
                            <div class="progress-bar bg-danger" style="width: @(Model.TotalOrders > 0 ? (Model.CancelledOrders * 100.0 / Model.TotalOrders) : 0)%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory & Top Items -->
    <div class="row mb-4">
        <div class="col-xl-6">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Inventory Insights</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="border-right">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Items</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalIngredients</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border-right">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Low Stock</div>
                                <div class="h5 mb-0 font-weight-bold text-warning">@Model.LowStockItems</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Out of Stock</div>
                            <div class="h5 mb-0 font-weight-bold text-danger">@Model.OutOfStockItems</div>
                        </div>
                    </div>
                    <hr>
                    <div class="text-center">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Inventory Value</div>
                        <div class="h4 mb-0 font-weight-bold text-success">$@Model.TotalInventoryValue.ToString("N2")</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Top Selling Items</h6>
                </div>
                <div class="card-body">
                    @if (Model.TopSellingFoods?.Any() == true)
                    {
                        @foreach (var item in Model.TopSellingFoods)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <div class="font-weight-bold">@item.Name</div>
                                    <small class="text-muted">@item.OrderCount orders</small>
                                </div>
                                <div class="font-weight-bold text-success">$@item.Revenue.ToString("N2")</div>
                            </div>
                            @if (item != Model.TopSellingFoods.Last())
                            {
                                <hr class="my-2">
                            }
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="fas fa-chart-line fa-2x mb-2"></i>
                            <p>No sales data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Activity & Alerts -->
    <div class="row mb-4">
        <div class="col-xl-8">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Orders Activity</h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders?.Any() == true)
                     {
                         @foreach (var order in Model.RecentOrders)
                         {
                             <div class="d-flex justify-content-between align-items-center mb-3">
                                 <div>
                                     <div class="font-weight-bold">Order #@order.OrderId</div>
                                     <small class="text-muted">@order.CustomerName - @order.OrderDate.ToString("MMM dd, HH:mm")</small>
                                 </div>
                                 <div class="text-right">
                                     <div class="font-weight-bold text-success">$@order.TotalAmount.ToString("N2")</div>
                                     <span class="badge badge-@(order.Status == "Completed" ? "success" : order.Status == "Processing" ? "info" : order.Status == "Pending" ? "warning" : "danger")">@order.Status</span>
                                 </div>
                             </div>
                             @if (order != Model.RecentOrders.Last())
                             {
                                 <hr class="my-2">
                             }
                         }
                     }
                     else
                     {
                         <div class="text-center text-muted">
                             <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                             <p>No recent orders</p>
                         </div>
                     }
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">System Alerts</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong><i class="fas fa-exclamation-triangle"></i> Low Stock Alert!</strong>
                        <br>@Model.LowStockItems items are running low.
                    </div>
                    @if (Model.OutOfStockItems > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong><i class="fas fa-times-circle"></i> Out of Stock!</strong>
                            <br>@Model.OutOfStockItems items are out of stock.
                        </div>
                    }
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <strong><i class="fas fa-info-circle"></i> Daily Summary</strong>
                        <br>@Model.TodayOrders orders processed today.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Users")" class="btn btn-primary btn-block">
                                <i class="fas fa-users"></i> Manage Users
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a class="btn btn-success btn-block" asp-controller="Admin" asp-action="MenuManagement">
                                <i class="fas fa-utensils"></i> Manage Menu
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a class="btn btn-warning btn-block" asp-controller="Ingredient" asp-action="Index">
                                <i class="fas fa-seedling"></i> Manage Inventory
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a class="btn btn-info btn-block" asp-controller="Order" asp-action="ViewOrders">
                                <i class="fas fa-shopping-cart"></i> View Orders
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>