@model List<WebRestoran.Models.Order>
@{
    ViewData["Title"] = "Order Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Order Management</h2>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Status Filter Tabs -->
            <div class="card mb-4">
                <div class="card-body">
                    <ul class="nav nav-pills" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link @(ViewBag.CurrentFilter == "all" ? "active" : "")" 
                               href="@Url.Action("Orders", new { status = "all" })">
                                All Orders
                                <span class="badge bg-secondary ms-1">@Model.Count</span>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link @(ViewBag.CurrentFilter == "pending" ? "active" : "")" 
                               href="@Url.Action("Orders", new { status = "pending" })">
                                Pending
                                <span class="badge bg-warning ms-1">@ViewBag.PendingCount</span>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link @(ViewBag.CurrentFilter == "processing" ? "active" : "")" 
                               href="@Url.Action("Orders", new { status = "processing" })">
                                Processing
                                <span class="badge bg-info ms-1">@ViewBag.ProcessingCount</span>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link @(ViewBag.CurrentFilter == "completed" ? "active" : "")" 
                               href="@Url.Action("Orders", new { status = "completed" })">
                                Completed
                                <span class="badge bg-success ms-1">@ViewBag.CompletedCount</span>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link @(ViewBag.CurrentFilter == "cancelled" ? "active" : "")" 
                               href="@Url.Action("Orders", new { status = "cancelled" })">
                                Cancelled
                                <span class="badge bg-danger ms-1">@ViewBag.CancelledCount</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Orders Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Orders (@ViewBag.CurrentFilter.ToString().ToUpper())</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Updated</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.OrderByDescending(o => o.CreatedDate))
                                    {
                                        <tr>
                                            <td>
                                                <strong>#@order.OrderId</strong>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@(order.User?.UserName ?? "Guest")</strong>
                                                    <br>
                                                    <small class="text-muted">@(order.User?.Email ?? "N/A")</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">@order.OrderItems.Count items</span>
                                            </td>
                                            <td>
                                                <strong>@order.TotalAmount.ToString("C")</strong>
                                            </td>
                                            <td>
                                                <span class="badge @order.StatusBadgeClass">@order.StatusDisplayName</span>
                                            </td>
                                            <td>
                                                <small>@order.CreatedDate.ToString("MMM dd, yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <small>@order.UpdatedDate.ToString("MMM dd, yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("OrderDetails", new { id = order.OrderId })" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                    @if (order.CanBeProcessed)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-success" 
                                                                onclick="updateOrderStatus(@order.OrderId, 'Processing')">
                                                            <i class="fas fa-play"></i> Process
                                                        </button>
                                                    }
                                                    @if (order.CanBeCompleted)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-success" 
                                                                onclick="updateOrderStatus(@order.OrderId, 'Completed')">
                                                            <i class="fas fa-check"></i> Complete
                                                        </button>
                                                    }
                                                    @if (order.CanBeCancelled)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                                onclick="updateOrderStatus(@order.OrderId, 'Cancelled')">
                                                            <i class="fas fa-times"></i> Cancel
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No orders found</h5>
                            <p class="text-muted">No orders match the current filter criteria.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Update Form -->
<form id="statusUpdateForm" method="post" action="@Url.Action("UpdateOrderStatus")" style="display: none;">
    <input type="hidden" name="orderId" id="statusOrderId" />
    <input type="hidden" name="newStatus" id="statusNewStatus" />
    <input type="hidden" name="notes" id="statusNotes" />
</form>

@section Scripts {
    <script>
        function updateOrderStatus(orderId, newStatus) {
            if (confirm(`Are you sure you want to change this order status to ${newStatus}?`)) {
                document.getElementById('statusOrderId').value = orderId;
                document.getElementById('statusNewStatus').value = newStatus;
                document.getElementById('statusUpdateForm').submit();
            }
        }

        // Auto-refresh every 30 seconds for real-time updates
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}