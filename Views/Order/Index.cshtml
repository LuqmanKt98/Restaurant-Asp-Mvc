@{
    ViewData["Title"] = "Orders";
}

<!-- Page Header -->
<div class="container-fluid bg-primary text-white py-5 mb-4">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-receipt me-3"></i>Order Management
                </h1>
                <p class="lead mb-0">Manage your restaurant orders efficiently</p>
            </div>
            <div class="text-end">
                <a href="@Url.Action("Create", "Order")" class="btn btn-light btn-lg">
                    <i class="fas fa-plus-circle me-2"></i>Create New Order
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Order Management Section -->
<div class="container">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-5 col-md-6 mb-4">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <div class="bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); width: 100px; height: 100px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center;">
                            <i class="fas fa-plus text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <h4 class="card-title fw-bold mb-3 text-dark">Create New Order</h4>
                    <p class="card-text text-muted mb-4 lead">Browse our delicious menu and place your order</p>
                    <a href="@Url.Action("Create", "Order")" class="btn btn-lg px-5 py-3 text-white fw-bold" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 50px;">
                        Start Ordering
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-5 col-md-6 mb-4">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <div class="bg-gradient" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); width: 100px; height: 100px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center;">
                            <i class="fas fa-history text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <h4 class="card-title fw-bold mb-3 text-dark">Order History</h4>
                    <p class="card-text text-muted mb-4 lead">View and track your previous orders</p>
                    <a href="@Url.Action("ViewOrders", "Order")" class="btn btn-lg px-5 py-3 text-white fw-bold" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border: none; border-radius: 50px;">
                        View Orders
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="p-3 border rounded">
                                <i class="fas fa-utensils text-warning mb-2" style="font-size: 2rem;"></i>
                                <h6>Browse Menu</h6>
                                <a href="@Url.Action("Index", "Food")" class="btn btn-sm btn-outline-warning">View Menu</a>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="p-3 border rounded">
                                <i class="fas fa-user-plus text-primary mb-2" style="font-size: 2rem;"></i>
                                <h6>Customer Service</h6>
                                <button class="btn btn-sm btn-outline-primary" disabled>Coming Soon</button>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="p-3 border rounded">
                                <i class="fas fa-chart-bar text-success mb-2" style="font-size: 2rem;"></i>
                                <h6>Reports</h6>
                                <button class="btn btn-sm btn-outline-success" disabled>Coming Soon</button>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="p-3 border rounded">
                                <i class="fas fa-cog text-secondary mb-2" style="font-size: 2rem;"></i>
                                <h6>Settings</h6>
                                <button class="btn btn-sm btn-outline-secondary" disabled>Coming Soon</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>